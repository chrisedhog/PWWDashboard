<!DOCTYPE html>
<html>
<head>
  <title>PWWDashboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Notification -->
<% unless flash.empty? %>
	  <script type="text/javascript">
	      <% flash.each do |f| %>
	      <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
	     	 toastr['<%= type %>']('<%= f[1] %>');
	      <% end %>
	  </script>
	 <% end %>
   
<!-- Temp navbar for dev -->
<% if user_signed_in? %>
    <%= render 'layouts/nav' %>
<% end %>
   
<div class="container">      
  <%= yield %>
</div>

</body>
</html>
