<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, placeholder: 'First Name' %>
    <%= f.input :last_name, placeholder: 'Last Name' %>
    <%= f.input :company_name, placeholder: 'George P. Johnson' %>
    <%= f.input :country, priority: ['Australia'] %>
    <%= f.input :city, placeholder: 'Sydney' %>
    <%= f.input :direct_number, placeholder: '0434005830' %>
    <%= f.input :position, placeholder: 'Producer' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <br>
<% end %>
