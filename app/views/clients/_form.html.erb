<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :client_name %>
    <%= f.input :country, priority: ['Australia', 'United States', 'United Kingdom'] %>
    <%= f.input :region %>
    <%= f.input :company, collection: ['ARGONAUT','G7','George P. Johnson','Junior','Motive','Partners + Napier','Pitch','Raumtechnik','School','Shoptology','Spinifex Group'], selected: ['George P. Johnson'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
